@model NonProfit.Models.RoleUpdateModel

@{
    ViewData["Title"] = "Update";
}

<h1>Update</h1>

<h4>Roles</h4>
<h4>Members In Role</h4>
<form method="post">
    <input type="hidden" name="roleName" value="@Model.Role.Name" />
    <input type="hidden" name="roleId" value="@Model.Role.Id" />
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Role)
                    @Html.DisplayNameFor(model => model.Role.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Members)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Members)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => Model.Role.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    <input type="checkbox" name="DeleteIds" value="@item.Id">Delete From Role
                </td>
            </tr>
            }
        </tbody>
    </table>
    <h4>Members Not In Role</h4>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Role)
                    @Html.DisplayNameFor(model => model.Role.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NonMembers)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.NonMembers)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => Model.Role.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserName)
                    </td>
                    <td>
                        <input type="checkbox" name="AddIds" value="@item.Id">Add From Role
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <button class="btn-danger"type="submit">Update Roles</button>
</form>

